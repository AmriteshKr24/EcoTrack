<% layout('layouts/boilerplate') %>
    <div>
        <% if (!username) { %>
            <h2 class="mt-16 text-center font-julius text-6xl text-[#75E69C]">Welcome to the Profile Page</h2>

            <div class="flex flex-col items-center mt-5">
                <a href="/user/login"
                    class="mt-4 py-3 px-6 bg-blue-500 text-white font-julius text-xl rounded-full hover:bg-blue-700">Login</a>
                <a href="/user/register"
                    class="mt-4 py-3 px-6 bg-green-500 text-white font-julius text-xl rounded-full hover:bg-green-700">Register</a>
            </div>
            <% } else { %>
                <h2 class="mt-16 text-center font-julius text-6xl text-[#75E69C]">Welcome to the Profile Page</h2>

                <div class="flex flex-col items-center mt-5">
                    <img src="https://upload.wikimedia.org/wikipedia/en/5/5f/Original_Doge_meme.jpg"
                        alt="Profile Picture"
                        class="w-1/6 rounded-full border-2 hover:border-[#152b1e] hover:cursor-pointer">
                    <h1 class="mt-4 font-indie text-4xl text-[#75E69C]">
                        <%= username %>
                    </h1>
                    <form action="/user/logout" method="post">
                        <button
                            class="mt-4 py-3 px-6 bg-red-500 text-white font-julius text-xl rounded-full hover:bg-red-700">Logout</button>
                    </form>
                </div>



                <div class="mt-8 w-4/6 min-w-[624px] mx-auto">
                    <h3 class="text-2xl font-julius text-[#75E69C] border-b-2 border-[#75E69C] pb-2">My Posts</h3>
                    <ul class="mt-4 space-y-4 text-teal-200">
                        <li class="border-b border-[#75E69C] pb-4">Post 1</li>
                        <li class="border-b border-[#75E69C] pb-4">Post 2</li>
                        <li class="border-b border-[#75E69C] pb-4">Post 3</li>
                    </ul>
                </div>

                <div class="mt-8 w-4/6 min-w-[624px] mx-auto">
                    <h3 class="text-2xl font-julius text-[#75E69C] border-b-2 border-[#75E69C] pb-2">Badges</h3>
                    <ul class="mt-4 space-y-4 text-teal-200">
                        <li class="border-b border-[#75E69C] pb-4">Badge 1</li>
                        <li class="border-b border-[#75E69C] pb-4">Badge 2</li>
                        <li class="border-b border-[#75E69C] pb-4">Badge 3</li>
                    </ul>
                </div>
                <% } %>
    </div>